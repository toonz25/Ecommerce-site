<section>
  
    <div class="container p-3">
      <a href="/admin/add-product" class="btn btn-success ml-auto" >Add product</a>
        <table class="table mt-4">
  <thead>
    <tr>
      <th scope="col">Number</th>
      <th scope="col">Title</th>
      <th scope="col">Content</th>
      <th scope="col">Catogary</th>
      <th scope="col">Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each product}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.name}}</td>
      <td>{{this.content}}</td>
      <td>{{this.catogary}}</td>
      <td><img style="width: 50px;height: 50px;" src="/product-image/{{this._id}}.jpg"></td>
      <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are want to delete {{this.name}}? ')">Delete</a></td>
    </tr>
   
    {{/each}}
    
  </tbody>
</table>
    </div>
</section>